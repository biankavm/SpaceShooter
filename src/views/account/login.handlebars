
{{> page-header 
  icon="bi bi-person-circle" 
  title="Fazer Login" 
  actionIcon=(showArrowIcon '/users/index')
}}

{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/if}}

<script src="/js/validations/login.js"></script>

<form action='/account/login' method='post'>
  {{> form-field 
    type="text"
    name="email"
    id="email"
    label="Email"
    placeholder="exemplo@email.com"
  }}

  {{#if errors.email}}
    <div class="alert alert-warning" role="alert">
      {{errors.email}}
    </div>
  {{/if}}

  {{> form-field 
    type="password"
    name="password"
    id="password"
    label="Senha"
  }}

  {{#if errors.password}}
    <div class="alert alert-warning" role="alert">
      {{errors.password}}
    </div>
  {{/if}}

  <button type='submit' class='btn btn-primary button'>Entrar</button>
</form>