<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-lg-8'>
      <div class='d-flex justify-content-between align-items-center'>
        <h2>
          <i class='bi bi-mortarboard me-2'></i>Detalhes do Curso
        </h2>
        {{{showArrowIcon '/'}}}

      </div>

      <hr class='hr mt-0' />

      <div class='card shadow-lg border-0'>

        <div class='card-body p-4'>
          <div class='mb-2'>
            <label class='form-label fw-bold text-muted'>Nome</label>
            <p>{{major.name}}</p>
          </div>
          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Código</label>
            <p>{{major.code}}</p>

          </div>

          {{#if major.description}}
            <div class='mb-3'>
              <label class='form-label fw-bold text-muted'>Descrição</label>
              <p>{{major.description}}</p>
            </div>
          {{/if}}

          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Data de Cadastro</label>
            <p>{{major.createdAt}}</p>
          </div>
          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Última Atualização</label>
            <p>{{major.updatedAt}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>