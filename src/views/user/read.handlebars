<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-lg-8'>
      <div class='d-flex justify-content-between align-items-center'>
        <h2>
          <i class='bi bi-person-circle me-2'></i>Detalhes do Usuário
        </h2>
        {{{showArrowIcon '/'}}}
      </div>
      <hr class='hr mt-0' />
      <div class='card shadow-lg border-0'>

        <div class='card-body p-4'>
          <div class='mb-2'>
            <label class='form-label fw-bold text-muted'>E-mail</label>
            <p>{{user.email}}</p>
          </div>
          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Curso</label>
            <p>{{major.name}}</p>
            <a href='/majors/read/{{major.id}}' class='link'>Ver detalhes do
              curso</a>
          </div>
          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Data de Cadastro</label>
            <p>{{user.createdAt}}</p>
          </div>
          <div class='mb-3'>
            <label class='form-label fw-bold text-muted'>Última Atualização</label>
            <p>{{user.updatedAt}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>