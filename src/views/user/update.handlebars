{{> page-header 
  icon="bi bi-person-circle" 
  title="Atualização de Usuário" 
  actionIcon=(showArrowIcon '/')
}}

<form action='/users/update/{{user.id}}' method='post'>
  {{> form-field 
    type="text"
    name="name"
    id="name"
    label="Nome"
    placeholder="Seu nome"
    value=user.name
  }}

  {{#if errors.name}}
    <div class="alert alert-warning">
      {{errors.name}}
    </div>
  {{/if}}

  {{> form-field 
    type="text"
    name="email"
    id="email"
    label="Email"
    placeholder="exemplo@email.com"
    value=user.email
  }}

  {{#if errors.email}}
    <div class="alert alert-warning">
      {{errors.email}}
    </div>
  {{/if}}

  {{> form-field 
    type="select"
    name="majorId"
    id="majorId"
    label="Curso"
    placeholder="Selecione um curso"
    options=majors
    selectedValue=user.majorId
  }}

  {{#if errors.majorId}}
    <div class="alert alert-warning">
      {{errors.majorId}}
    </div>
  {{/if}}

  <button type='submit' class='btn btn-primary button'>Atualizar Usuário</button>
</form>